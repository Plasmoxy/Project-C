/* Plasmoxy's tsconfig.json 2020 */

{
  "include": [ "src" ],
  "exclude": [ "node_modules" ],
  
  "compilerOptions": {
    "outDir": "build",
    "target": "es2018",
    /*
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    */
    "allowJs": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "noImplicitAny": false,
    "module": "CommonJS",
    "moduleResolution": "node",
    "resolveJsonModule": true
  },
 
}